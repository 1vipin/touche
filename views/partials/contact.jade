  head
  body
    #contact.text-center
      .container
        .section-title.text-center
          h2 Contact Form
          hr
          p Lorem ipsum dolor sit amet, consectetur adipiscing elit duis sed.
        .col-md-10.col-md-offset-1
          form#contactForm(name='sentMessage', novalidate='')
            .row
              .col-md-6
                .form-group
                  input#name.form-control(type='text', placeholder='Name', required='required')
                  p.help-block.text-danger
              .col-md-6
                .form-group
                  input#email.form-control(type='email', placeholder='Email', required='required')
                  p.help-block.text-danger
            .form-group
              textarea#message.form-control(name='message', rows='4', placeholder='Message', required='')
              p.help-block.text-danger
            #success
            button.btn.btn-custom.btn-lg(type='submit') Send Message
    #footer
      .container.text-center
        .col-md-4
          h3 Address
          .contact-item
            p 4321 California St,
            p San Francisco, CA 12345
        .col-md-4
          h3 Opening Hours
          .contact-item
            p Mon-Thurs: 10:00 AM - 11:00 PM
            p Fri-Sun: 11:00 AM - 02:00 AM
        .col-md-4
          h3 Contact Info
          .contact-item
            p Phone: +1 123 456 1234
            p Email: info@company.com
      .container-fluid.text-center.copyrights
        .col-md-8.col-md-offset-2
